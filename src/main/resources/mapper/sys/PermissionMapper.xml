	<resultMap id="treeMap" type="com.ivplay.modules.sys.vo.TreeNode">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="parent_id" property="parentId" jdbcType="BIGINT" />
		<result column="name" property="name" jdbcType="VARCHAR" />
	</resultMap>

	<!--根据用户ID查询该用户所拥有的权限列表-->
	<select id="findListPermissionByUserId" parameterType="java.lang.Long" resultMap="PermissionResultMap">
		SELECT
			*
		FROM
			t_permission p
		WHERE
 			p.type != '0'
 			AND p.id IN
 			(SELECT
				rp.permission_id
			FROM
				t_role_permission rp
			WHERE
				rp.role_id IN (
					SELECT
						ur.role_id
					FROM
						t_admin_role ur
					WHERE
						ur.user_id = #{userId}
				)
		);
	</select>

	<!--根据用户ID查询用户菜单列表-->
	<select id="findMenuListByUserId" parameterType="java.lang.Long" resultMap="PermissionResultMap">
		SELECT
			*
		FROM
			t_permission p
		WHERE
			(p.type = '0' or p.type = '1')
		AND
			p.id IN
		(SELECT
			rp.permission_id
		FROM
			t_role_permission rp
		WHERE
		rp.role_id IN (
		SELECT
		ur.role_id
		FROM
			t_admin_role ur
		WHERE
		ur.user_id = #{userId}
		)
		) order by p.sort asc;
	</select>

	<!--返回树列表-->
	<select id="findTreeList" resultMap="treeMap">
		SELECT id,parent_id,name FROM t_permission p  order by p.sort asc
	</select>
</mapper>