<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ivplay.modules.sys.mapper.RoleMapper">
    <resultMap id="BaseResultMap" type="com.ivplay.modules.sys.model.Role">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="remark" property="remark" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <!--根据用户ID查询角色对象信息-->
    <select id="findByUserId" parameterType="java.lang.Long" resultType="com.ivplay.modules.sys.model.Role">
        SELECT * FROM 
        	t_role r 
       	where r.id IN
        (
            SELECT ur.role_id FROM t_admin_role ur where ur.user_id=#{userId}
        )
    </select>
</mapper>